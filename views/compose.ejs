<%- include("partials/header.ejs") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="composeTitle" class="form-label">Title</label>
        <input type="text" class="form-control" name="composeTitle" id="composeTitle">
    </div>
    <div class="form-group">
        <label for="composeBody" class="form-label">Post</label>
        <textarea name="composeBody" class="form-control" id="composeBody" cols="5" rows="5"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer.ejs") -%>